<div class="about s1" id="about">
    <div class="wrap">
        <div class="col1_1_of_3 span_1_of_3">
            <h3></h3>
            <h3>@Resources.Home.About.Top_Box1_Title</h3>
            <p>@Resources.Home.About.Top_Box1_Content</p>
