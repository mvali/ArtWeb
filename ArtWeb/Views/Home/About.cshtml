                            <h4>@Html.ActionLink(@Resources.Home.About.box_right2_title, "AboutMe", "Details")</h4>
                            <p>@Resources.Home.About.box_right2_content</p>
                        </div>
                        <div class="clear"> </div>
                    </div>
                    <div class="clear"> </div>
                </div>
            </div>
        </div>
        <div class="clear"> </div>
    </div>
